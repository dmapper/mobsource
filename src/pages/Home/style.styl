#main
  color #59595a
  position relative
  .header
    width 100%
    height 50px
    background-color #006bb3
    h1
      color white
      display inline-block
      padding 17px
    button
      background none
      color white
      border none
      margin 15px
      &:focus
        outline none
    .sing-in
      float right
  .online-wrap
    position fixed
    top 80px
    right 20px
    .count
      padding 2px 3px
      line-height 20px
  .data
    padding 30px 30px 30px 20px
    .question
      padding-bottom 10px
    .answer
      padding 2px 5px
      font-size 18px
      div
        display inline-block
      input[type=radio]
        position relative
        top 2px
        margin 0 5px
        border 0px
        width 16px
        height 16px
      .result
        position relative
        top 4px
        margin 0px 70px
        border 1px solid gray
        width 60px
        height 20px
        font-size 16px
        background-color whitesmoke
        color black
        span
          position absolute
          width 100%
          text-align center
          z-index 10
        .result-fill
          position absolute
          background-color #8bc67e
          height 100%
          z-index 1
          left 0
  .clear-button-wrap
    padding 5px 20px
    button
      background-color #006bb3
      color white
      border none
      border-radius 3px
      padding 5px 15px
      &:focus
        outline none
