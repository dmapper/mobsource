.modal-signin-header
  background-color #006bb3
  color white
  border-top-right-radius 3px
  border-top-left-radius 3px
  height 30px
  padding 6px
  h1
    text-align center
.modal-signin-body
  padding 20px
  input
    padding 5px
    width 100%
    border 1px solid gray
    margin 5px 0
    &:focus
      outline none
  .button-wrap
    width 100%
    height 25px
    padding-top 5px
    button
      background-color #006bb3
      color white
      float right
      border none
      border-radius 3px
      padding 5px 15px
      &:focus
        outline none